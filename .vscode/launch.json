{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Tauri Dev",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "tauri:dev"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug CAN Viewer",
            "preLaunchTask": "build-frontend",
            "cargo": {
                "args": [
                    "build",
                    "--features",
                    "devtools",
                    "--manifest-path",
                    "${workspaceFolder}/Cargo.toml"
                ],
                "filter": {
                    "name": "can-viewer",
                    "kind": "bin"
                }
            },
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug CAN Viewer (Release)",
            "preLaunchTask": "build-frontend",
            "cargo": {
                "args": [
                    "build",
                    "--release",
                    "--features",
                    "devtools",
                    "--manifest-path",
                    "${workspaceFolder}/Cargo.toml"
                ],
                "filter": {
                    "name": "can-viewer",
                    "kind": "bin"
                }
            },
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Unit Tests",
            "preLaunchTask": "build-frontend",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--manifest-path",
                    "${workspaceFolder}/Cargo.toml"
                ],
                "filter": {
                    "name": "can-viewer",
                    "kind": "bin"
                }
            },
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "CAN Frame Generator (vcan0)",
            "cargo": {
                "args": [
                    "build",
                    "--bin",
                    "can-frame-generator",
                    "--manifest-path",
                    "${workspaceFolder}/Cargo.toml"
                ],
                "filter": {
                    "name": "can-frame-generator",
                    "kind": "bin"
                }
            },
            "args": ["-i", "vcan0", "-r", "0.5"],
            "cwd": "${workspaceFolder}",
            "terminal": "integrated"
        }
    ]
}
